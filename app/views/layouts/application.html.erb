<!DOCTYPE html>
<html>

<head>
  <title>OdinKittens</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>


  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="container">
  <% flash.each do |key, value| %>
  <%= content_tag :div, class: "flash #{key} alert alert-warning alert-dismissible fade show", role: "alert" do
  %>
  <%= value %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>

    <% end %>
    <% end %>

    <%# <%= content_tag :button, type: "button", class: "close", data-dismiss: "alert", aria-label: "Close" %>
    <%# <%= content_tag :span, aria-hidden: "true" %>
    <% flash.clear %>

    <%= yield %>
</body>

</html>