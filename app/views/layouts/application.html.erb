<!DOCTYPE html>
<html>

<head>
  <title>OdinKittens</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', 'https://unpkg.com/tachyons@4.12.0/css/tachyons.min.css' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <%# The alert for all messages and errors %>
  <% flash.each do |key, value| %>
  <%= content_tag :div, class: "flash #{key} alert alert-warning alert-dismissible fade show", role: "alert" do %>
  <%= value %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
    <% end %>
    <% end %>

    <% flash.clear %>

    <%= yield %>

    <%= yield %>
</body>

</html>