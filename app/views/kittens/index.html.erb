<div class="jumbotron jumbotron-fluid pl-5 ">
  <h1 class="display-4 ">KittenDB</h1>
  <p>Catalog your kittens here!</p>

</div>
<div class="container">
  <div class="h3">
    <%= link_to 'New Kitten', new_kitten_path, :class => "btn btn-outline-secondary" %>
  </div>
  <table class="f6 w-100 mw8 center" cellspacing="0">
    <tr>
      <%# Trying to iterate over the column names %>
      <% @kitten_columns.each do |col_name| %>
      <th class="fw6 bb b--black-20 tl pb3 pr3 bg-white"><%= col_name.capitalize %></th>
      <% end %>
    </tr>
    <tbody class="lh-copy">
      <% @kittens.each do |kitten| %>
      <tr>
        <td class="pv3 pr3 bb b--black-20"><%= kitten.name %></td>
        <td class="pv3 pr3 bb b--black-20"><%= kitten.age %></td>
        <td class="pv3 pr3 bb b--black-20"><%= kitten.cuteness %></td>
        <td class="pv3 pr3 bb b--black-20"><%= kitten.softness%></td>
        <td class="w1 center"><%= link_to 'Show', kitten_path(kitten), :class => 'btn btn-outline-secondary'  %></td>
        <td><%= link_to 'Delete', kitten_path(kitten), 
              method: :delete,
              data: { confirm: 'Are you sure?'},
              :class => 'btn btn-outline-secondary' 
              %></td>
      </tr>
      <% end %>
    </tbody>

  </table>

</div>